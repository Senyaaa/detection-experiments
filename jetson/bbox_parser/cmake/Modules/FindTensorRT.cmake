find_path(TENSORRT_INCLUDE_DIR NvInfer.h HINTS ${TENSORRT_PATH} PATH_SUFFIXES include)
if(${TENSORRT_INCLUDE_DIR} MATCHES "TENSORRT_INCLUDE_DIR-NOTFOUND")
	message(FATAL_ERROR "-- Unable to find TensorRT headers. Please set path using -DTENSORRT_PATH")
else()
	message(STATUS "Found TensorRT headers at ${TENSORRT_INCLUDE_DIR}")
endif()

find_library(TENSORRT_LIBRARY_INFER nvinfer HINTS ${TENSORRT_PATH} PATH_SUFFIXES lib lib64)
find_library(TENSORRT_LIBRARY_INFER_PLUGIN nvinfer_plugin HINTS ${TENSORRT_PATH} PATH_SUFFIXES lib lib64)
if((${TENSORRT_LIBRARY_INFER} MATCHES "TENSORRT_LIBRARY_INFER-NOTFOUND") OR (${TENSORRT_LIBRARY_INFER_PLUGIN} MATCHES "TENSORRT_LIBRARY_INFER_PLUGIN-NOTFOUND"))
	message(FATAL_ERROR "-- Unable to find TensorRT libs. Please set path using -DTENSORRT_PATH")
else()
	set(TENSORRT_LIBRARY ${TENSORRT_LIBRARY_INFER} ${TENSORRT_LIBRARY_INFER_PLUGIN})
	message(STATUS "Found TensorRT libs at ${TENSORRT_LIBRARY}")
endif()
